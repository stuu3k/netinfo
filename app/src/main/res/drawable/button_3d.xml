<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bottom shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#0288D1"/>  <!-- Darker blue for shadow -->
            <corners android:radius="4dp"/>
        </shape>
    </item>
    <!-- Button color -->
    <item android:bottom="2dp">  <!-- Slightly reduced offset -->
        <shape android:shape="rectangle">
            <solid android:color="#03A9F4"/>  <!-- Original blue color -->
            <corners android:radius="4dp"/>
        </shape>
    </item>
</layer-list> 